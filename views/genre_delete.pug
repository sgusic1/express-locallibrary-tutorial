extends layout

block content

    h1 #{title}: #{genre.name}

    if allGenreBooks.length > 0
        p #[strong Delete the following books before attempting to delete this genre.]

        div(style='margin-top: 20px; margin-left: 26px;')
           h4 Books:

           ul
              each book in allGenreBooks
                 li
                    a(href=book.url) #{book.title}

    else
        p Do you really want to delete this Genre?

        form(method='POST')
            div.form-group
               input#genreid.form-control(type='hidden' name='genreid' value=genre._id)

               button.btn.btn-primary(type='submit') Delete


